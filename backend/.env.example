# Wedding Face Forward - Phase 2 Configuration
# Copy this file to .env and customize the values

# =============================================================================
# PATHS
# =============================================================================

# Root directory for event photos (will contain Incoming/, Processed/, People/, Admin/)
EVENT_ROOT=./EventRoot

# SQLite database path
DB_PATH=./data/wedding.db

# =============================================================================
# PROCESSING
# =============================================================================

# Number of worker threads (2-4 recommended for CPU-only)
WORKER_COUNT=4

# Clustering threshold for face matching (lower = stricter, 0.4-0.7 typical)
# Cosine distance: 0.6 is a good default
CLUSTER_THRESHOLD=0.6

# Maximum image dimension after processing (pixels)
MAX_IMAGE_SIZE=2048

# Thumbnail size (pixels)
THUMBNAIL_SIZE=300

# =============================================================================
# WATCHER
# =============================================================================

# Fallback scan interval in seconds (catches files missed by watchdog)
SCAN_INTERVAL=30

# Supported file extensions (comma-separated, lowercase)
SUPPORTED_EXTENSIONS=.jpg,.jpeg,.png,.cr2,.nef,.arw,.dng,.orf,.rw2

# =============================================================================
# MODES
# =============================================================================

# Dry run mode - logs actions without copying files
DRY_RUN=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Use hardlinks instead of copies (saves disk space, Windows NTFS only)
USE_HARDLINKS=true
